{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-var": ["error"],
    "no-useless-rename": ["error"],
    "prefer-spread": ["error"],

    "no-console": ["off"],
    "no-unused-vars": ["off"]
  }
}